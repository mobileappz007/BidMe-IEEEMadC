<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@android:color/widget_edittext_dark"
        app:cardCornerRadius="0dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"

            android:orientation="horizontal"
            android:padding="5dp">


            <com.bidme.utils.CustomTextViewBold
                android:id="@+id/tvSupportTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_support1"
                android:drawablePadding="10dp"

                android:layout_weight="1"
                android:padding="10dp"
                android:text="Support"

                android:textColor="@color/bg_color"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:src="@drawable/ic_close_black_24dp"

                />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:orientation="vertical"

        >

        <com.bidme.utils.CustomTextViewBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:text="@string/message"
            android:textSize="16sp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            android:layout_marginTop="@dimen/_5sdp"
            app:counterMaxLength="30">


            <com.bidme.utils.CustomEditText
                android:id="@+id/editTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="true"
                android:focusable="true"
                android:drawableStart="@drawable/ic_conversation"
                android:layout_margin="10dp"
                android:maxLength="30"

                android:drawablePadding="10dp"

                android:hint="Write your title up to 30 characters."
                android:textSize="14sp"  />
        </android.support.design.widget.TextInputLayout>

 <android.support.design.widget.TextInputLayout
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            android:layout_marginTop="@dimen/_5sdp"
            app:counterMaxLength="400">


            <com.bidme.utils.CustomEditText
                android:id="@+id/editDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="true"
                android:focusable="true"
                android:drawableStart="@drawable/ic_description"
                android:layout_margin="10dp"

                android:drawablePadding="10dp"

                android:hint="Write description Maxmimum 400 characters."
                android:textSize="14sp"  />
        </android.support.design.widget.TextInputLayout>



    </LinearLayout>

    <com.bidme.utils.CustomButton
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear"
        android:layout_margin="20dp"
        android:background="@drawable/button_selector"
        android:text="Submit"
        android:textColor="@color/white" />


</RelativeLayout>