<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"

        >

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:elevation="5dp"
            android:padding="10dp"
            app:cardCornerRadius="2dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"

                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"

                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@+id/tvdate"
                    android:layout_toRightOf="@+id/cv_bid"
                    android:orientation="vertical">

                    <com.bidme.utils.CustomButton
                        android:id="@+id/wintag"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_normal_green"

                        android:gravity="center"

                        android:text="@string/Winner"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:visibility="visible" />

                    <com.bidme.utils.CustomTextView
                        android:id="@+id/tvname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />


                    <com.bidme.utils.CustomTextViewBold
                        android:id="@+id/tvprice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:padding="3dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"

                        />

                </LinearLayout>


                <android.support.v7.widget.CardView
                    android:id="@+id/cv_bid"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginTop="10dp"

                    app:cardBackgroundColor="@android:color/widget_edittext_dark"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="5dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivProfilePic"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_circle_gray" />
                </android.support.v7.widget.CardView>

                <RelativeLayout
                    android:layout_below="@id/tvdate"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="40dp"



                    android:id="@+id/relablockUnblock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                <com.bidme.utils.CustomButton
                    android:id="@+id/block"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/button_normal_green"
                    android:gravity="center"

                    android:text="@string/Block"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:visibility="visible" />


                <com.bidme.utils.CustomButton
                    android:id="@+id/unblock"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"



                    android:background="@drawable/button_red"

                    android:gravity="center"

                    android:text="@string/Unblock"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:visibility="gone" />
                </RelativeLayout>


                <com.bidme.utils.CustomButton
                    android:id="@+id/Delete"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/relablockUnblock"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"


                    android:background="@color/blue"

                    android:gravity="center"

                    android:text="@string/Delete"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <com.bidme.utils.CustomTextViewBold
                    android:id="@+id/tvdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textSize="12sp" />


            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </RelativeLayout>
</layout>