<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/off_white"
        tools:context=".fragment.dashboad.Setting">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"

            app:cardBackgroundColor="@color/off_white"
            app:cardCornerRadius="0dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:id="@+id/llID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardView"
                android:layout_marginTop="10dp"

                android:background="@color/off_white"
                android:orientation="horizontal"
                android:padding="10dp"
                >


                <android.support.v7.widget.CardView
                    android:id="@+id/cvdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5dp"
                    android:elevation="5dp"
                    app:cardCornerRadius="40dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imagedp"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"

                        android:src="@drawable/bg_img"
                        app:civ_border_color="@color/black"
                        app:civ_border_width="0.5dp"/>
                </android.support.v7.widget.CardView>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <com.bidme.utils.CustomTextViewBold
                        android:id="@+id/tvname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Alia"
                        android:textSize="18sp" />

                    <com.bidme.utils.CustomTextView
                        android:id="@+id/tvdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Joined on 25 Feb"
                        android:textSize="16sp" />
                </LinearLayout>




            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            android:layout_below="@+id/cardView"
            app:cardCornerRadius="0dp"
            app:cardElevation="5dp">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/off_white"
                tools:ignore="NotSibling">


                <com.bidme.utils.CustomTextView
                    android:id="@+id/tvchangepass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="16dp"
                    android:padding="10dp"
                    android:clickable="true"
                    android:background="@drawable/greyripple"

                    android:drawableLeft="@drawable/ic_hotel_key"
                    android:drawableRight="@drawable/ic_right_arrow"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/changpass"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray" />


                <com.bidme.utils.CustomTextView
                    android:id="@+id/tvinvited"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="16dp"
                    android:padding="10dp"
                    android:background="@drawable/greyripple"


                    android:drawableLeft="@drawable/ic_card"
                    android:drawableRight="@drawable/ic_right_arrow"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/inviteafrnd"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"

                    android:background="@color/gray" />

                <com.bidme.utils.CustomTextView
                    android:id="@+id/tvsupport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="16dp"
                    android:background="@drawable/greyripple"

                    android:padding="10dp"
                    android:drawableLeft="@drawable/ic_leader"
                    android:drawableRight="@drawable/ic_right_arrow"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/SUPPORT"
                    android:textSize="16sp" />
  <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"

                    android:background="@color/gray" />

                <com.bidme.utils.CustomTextView
                    android:id="@+id/tvPrivacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="16dp"
                    android:background="@drawable/greyripple"

                    android:padding="10dp"
                    android:drawableLeft="@drawable/ic_privacy_policy"
                    android:drawableRight="@drawable/ic_right_arrow"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/PrivacyPolicy"
                    android:textSize="16sp" />
 <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"

                    android:background="@color/gray" />

                <com.bidme.utils.CustomTextView
                    android:id="@+id/tvCookiePolicy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="16dp"
                    android:background="@drawable/greyripple"

                    android:padding="10dp"
                    android:drawableLeft="@drawable/ic_privacy_policy"
                    android:drawableRight="@drawable/ic_right_arrow"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/cookiePolicy"
                    android:textSize="16sp" />
<View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"

                    android:background="@color/gray" />

                <com.bidme.utils.CustomTextView
                    android:id="@+id/tvFQPolicy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="16dp"
                    android:background="@drawable/greyripple"

                    android:padding="10dp"
                    android:drawableLeft="@drawable/ic_problem"
                    android:drawableRight="@drawable/ic_right_arrow"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/FQ"
                    android:textSize="16sp" />

            </LinearLayout>
            </ScrollView>

        </android.support.v7.widget.CardView>

    </RelativeLayout>
</layout>